<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"


    >


    <TextView
        android:id="@+id/textView6"
        android:layout_width="142dp"
        android:layout_height="41dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="154dp"
        android:gravity="center|center_horizontal|left"
        android:text="Tags:"
        android:textColor="#121111"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routine_description" />


    <LinearLayout
        android:id="@+id/tagsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="274dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagInputField"></LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="40dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="Description:"
        android:textColor="#121111"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/routine_description"
        android:layout_width="361dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="@drawable/custom_edittext_rec"
        android:drawablePadding="8dp"
        android:gravity="top"
        android:maxLength="40"
        android:padding="8dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/tagInputField"
        android:layout_width="207dp"
        android:layout_height="42dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="208dp"
        android:hint="Add Tags"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/addTagButton"
        android:layout_width="89dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="26dp"
        android:text="Add"
        app:layout_constraintStart_toEndOf="@+id/tagInputField"
        app:layout_constraintTop_toBottomOf="@+id/routine_description" />

    <Button
        android:id="@+id/save_routine"
        android:layout_width="156dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"


        android:layout_marginTop="305dp"
        android:layout_marginEnd="125dp"
        android:text="next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagInputField" />

</RelativeLayout>