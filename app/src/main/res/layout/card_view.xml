<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<!--    -->
<!--    <androidx.cardview.widget.CardView-->
<!--        app:cardElevation="10dp"-->
<!--        app:cardCornerRadius="10dp"-->
<!--        android:layout_margin="10dp"-->
<!--        app:cardBackgroundColor="@color/white"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
<!--        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageview"
            android:layout_width="133dp"
            android:layout_height="159dp"
            android:layout_margin="10dp"
            android:src="@drawable/girl_exercise_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:gravity="bottom"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textRoutine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Routine"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="By"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:baselineAligned="false"
                android:text="Exercises"
                android:textColor="#000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/blanklike"
                    android:layout_width="37dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/thumb_up_unfilled" />

                <ImageView
                    android:id="@+id/blank_dislike"
                    android:layout_width="42dp"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="96dp"
                    android:layout_marginTop="-3dp"
                    android:baselineAligned="false"
                    app:srcCompat="@drawable/thumb_down_off" />

                <ImageView
                    android:id="@+id/filllike"
                    android:layout_width="37dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/thumb_up_filled"
                    tools:visibility="gone" />

                <ImageView
                    android:id="@+id/fill_dislike"
                    android:layout_width="42dp"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="96dp"
                    android:layout_marginTop="-3dp"
                    android:baselineAligned="false"
                    android:rotationY="180"
                    android:visibility="gone"
                    app:srcCompat="@drawable/baseline_thumb_down_alt_24" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/black" />

        </LinearLayout>


    </LinearLayout>

    <!--    </androidx.cardview.widget.CardView>-->

</LinearLayout>