<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_routine">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.np.mad.happy_habbits.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.np.mad.happy_habbits.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.np.mad.happy_habbits.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_signin"
        android:name="com.example.np.mad.happy_habbits.ui.SignIn.SignIn"
        android:label="@string/title_signin"
        tools:layout="@layout/fragment_signin" />
    <fragment
        android:id="@+id/navigation_signup"
        android:name="com.example.np.mad.happy_habbits.ui.SignIn.SignUpFragment"
        android:label="@string/title_signin"
        tools:layout="@layout/activity_sign_up" />

    <fragment
        android:id="@+id/navigation_routine"
        android:name="com.example.np.mad.happy_habbits.ui.Routines.RoutineFragment"
        android:label="@string/title_activity_browsing_routine"
        tools:layout="@layout/activity_browsing_routine" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.np.mad.happy_habbits.ui.User.UserProfileFragment"
        android:label="@string/title_activity_user"
        tools:layout="@layout/activity_user_profile" />

    <fragment
        android:id="@+id/navigation_routine_detail"
        android:name="com.example.np.mad.happy_habbits.ui.Routines.RoutineFragment"
        android:label="@string/title_activity_browsing_routine"
        tools:layout="@layout/routine_detail" />


</navigation>